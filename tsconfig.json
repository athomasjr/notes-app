{
  "include": ["./src/**/*", "./site/wrappers/*"],
  "exclude": ["node_modules", "public", ".cache"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "noImplicitAny": true,
    "baseUrl": "src"
  }
}
